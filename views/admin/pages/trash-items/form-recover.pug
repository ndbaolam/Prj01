mixin form-recover(action)
  form(
    action=action
    method="POST"
    form-change-multi
  ) 
    .d-flex.align-items-start
      .form-group
        input(
          type="text"
          name="ids"
          value=""
          class="form-control d-none"
        ) 
      .form-group
        button(
          recover-all
          type="submit"
          class="btn btn-warning btn-sm"
        ) Khôi phục tất cả