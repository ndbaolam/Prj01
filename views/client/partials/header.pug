include ../mixins/sub-menu.pug

header.header
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          a(href="/")
            img(src="/images/logo.svg", alt="Logo")

      .col-5
        form(
          action="/search"
          method="GET"
        ) 
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) Tìm

      .col-4
        .inner-menu
          ul
            li
              .icon
                a(href="/") 
                  img(src="https://cdn-icons-png.flaticon.com/512/25/25694.png" alt="Trang chủ")
            li(class="sub-menu")
              a(href="/products") 
                .icon
                  img(src="https://upload.wikimedia.org/wikipedia/commons/1/14/Product_sample_icon_picture.png" alt="Sản phẩm")
              if(layoutCategoryProducts)
                +sub-menu(layoutCategoryProducts)
            li
              .icon 
                a(href="/cart")(#{cart ? cart.products.length : 0})
                  img(src="https://static-00.iconduck.com/assets.00/shopping-cart-icon-2048x2047-gv68pvgw.png" alt="Giỏ hàng")
            if(!user)
              li
                .icon
                  a(href="/user/login") 
                    img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQVXYHNZN7s4uWw7N4wHU7tsEa4jJ5S5rmieA&usqp=CAU" alt="Đăng nhập")
              li
                .icon
                  a(href="/user/register")
                    img(src="https://w7.pngwing.com/pngs/681/874/png-transparent-plus-sign-computer-icons-button-user-register-button-silhouette-internet-area.png" alt="Đăng ký")
            else
              li
                .icon
                  a(href="/user/logout") 
                    img(src="https://static-00.iconduck.com/assets.00/logout-icon-1024x922-d6v5rw11.png" alt="Đăng xuất")
            